Options -MultiViews

RewriteEngine On

# ============================================
# CACHE-KONTROLLE (Lighthouse Performance Fix)
# ============================================

<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|png|jpg|jpeg|webp|svg|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/json "access plus 1 day"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
  AddOutputFilterByType DEFLATE application/javascript application/x-javascript text/javascript
  AddOutputFilterByType DEFLATE application/json application/xml image/svg+xml
</IfModule>

<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/plain text/html text/xml text/css
  AddOutputFilterByType BROTLI_COMPRESS application/javascript application/x-javascript text/javascript
  AddOutputFilterByType BROTLI_COMPRESS application/json application/xml image/svg+xml
</IfModule>

# ============================================
# SEO: HTTPS + WWW Redirect (einheitliche URL-Struktur)
# Canonical: https://www.kraftfahrer-mieten.com/
# ============================================

# 1. Force HTTPS first (before www redirect)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# 2. Force WWW (nach HTTPS)
RewriteCond %{HTTP_HOST} ^kraftfahrer-mieten\.com$ [NC]
RewriteRule ^(.*)$ https://www.kraftfahrer-mieten.com/$1 [R=301,L]

# Bypass all rewrites for admin-check.html (serve static)
RewriteRule ^admin-check\.html$ - [L]

# MIME types for images
AddType image/jpeg .jpg .jpeg
AddType image/png .png

# Prevent partial content to avoid 206 issues for crawlers
<IfModule mod_headers.c>
  Header set Accept-Ranges none
</IfModule>

# Canonical 301 redirects for legacy .html URLs (one hop, HTTPS + WWW)
# IMPORTANT: Do NOT redirect admin-check.html so the static health check stays reachable
RewriteRule ^index\.html$ https://www.kraftfahrer-mieten.com/ [R=301,L]
RewriteRule ^impressum\.html$ https://www.kraftfahrer-mieten.com/impressum [R=301,L]
RewriteRule ^datenschutzerklaerung\.html$ https://www.kraftfahrer-mieten.com/datenschutz [R=301,L]
RewriteRule ^allgemeine-geschaeftsbedingungen\.html$ https://www.kraftfahrer-mieten.com/agb [R=301,L]
# Legacy mobile/smartphone/printable/vgapda URLs → Homepage
RewriteRule ^mobile/.* https://www.kraftfahrer-mieten.com/ [R=301,L]
RewriteRule ^smartphone/.* https://www.kraftfahrer-mieten.com/ [R=301,L]
RewriteRule ^printable/.* https://www.kraftfahrer-mieten.com/ [R=301,L]
RewriteRule ^vgapda/.* https://www.kraftfahrer-mieten.com/ [R=301,L]

# Referenzen variants (mobile/smartphone/printable .../default.html)
RewriteRule ^referenzen/default\.html$ https://www.kraftfahrer-mieten.com/referenzen [R=301,L]
RewriteRule ^referenzen/(mobile|smartphone|printable)/.*default\.html$ https://www.kraftfahrer-mieten.com/referenzen [R=301,L]

# Any PHP files → Homepage
RewriteCond %{REQUEST_URI} \.php$ [NC]
RewriteRule ^(.*)$ https://www.kraftfahrer-mieten.com/ [R=301,L]
# Generic: any other .html → sans extension, except admin-check.html
RewriteCond %{REQUEST_URI} \.html$ [NC]
RewriteCond %{REQUEST_URI} !^/admin-check\.html$ [NC]
RewriteRule ^(.+)\.html$ https://www.kraftfahrer-mieten.com/$1 [R=301,L]

# Remove legacy Fahrerbörse URLs
Redirect gone /fahrerboerse
Redirect gone /fahrerbörse

# (HTTPS redirect moved to top for correct order)

# SPA fallback routing
RewriteBase /
RewriteRule ^index\.html$ - [L]

# Explicit SPA routes for admin (avoid any external redirects)
RewriteRule ^admin$ /index.html [L]
RewriteRule ^admin/login$ /index.html [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(robots\.txt|sitemap\.xml|favicon\.ico|assets/|uploads/|public/)
RewriteRule . /index.html [L]